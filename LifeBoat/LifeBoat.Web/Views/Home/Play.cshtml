@{
	ViewBag.Title = "Game in Progress";
}
<h2>@ViewBag.Title</h2>
<div class="container">
	<input type="text" id="message" />
	<input type="button" id="sendmessage" value="Send" />
	<input type="hidden" id="displayname" />
	<ul id="discussion"></ul>
</div>
@section scripts {
	<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
	<script src="~/signalr/hubs"></script>
	<script>
        $(function () {
            var gameHub = $.connection.gameHub;
            gameHub.client.receiveChat = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            gameHub.client.announceJoinedPlayer = function (name) {
            	$('#discussion').append('<li><strong>' + htmlEncode(name) + '</strong> has joined the game.</li>');
            }; 
            $('#message').focus();
            $.connection.hub.start().done(function () {

            	gameHub.server.join();

                $('#sendmessage').click(function () {
                	gameHub.server.sendChat($('#message').val());
                    $('#message').val('').focus();
                });
            });
        });
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
	</script>
}